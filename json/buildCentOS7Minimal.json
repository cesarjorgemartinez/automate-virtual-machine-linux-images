{
  "variables": {
    "so_distribution": "{{env `SO_DISTRIBUTION`}}",
    "so_majorversion": "{{env `SO_MAJORVERSION`}}",
    "so_imagetype": "{{env `SO_IMAGETYPE`}}",
    "guest_os_type": "{{env `SO_GUESTOSTYPE`}}",
    "iso": "isos/{{env `SO_ISOIMAGENAME`}}",
    "checksum": "{{env `SO_ISOCHECKSUMIMAGE`}}",
    "checksum_type": "{{env `SO_ISOCHECKSUMTYPE`}}",
    "vm_fullname": "{{env `SO_VMFULLNAME`}}"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_os_type": "{{user `guest_os_type`}}",
      "iso_url": "{{user `iso`}}",
      "iso_checksum": "{{user `checksum`}}",
      "iso_checksum_type": "{{user `checksum_type`}}",
      "vm_name": "{{user `vm_fullname`}}",
      "disk_size": 20480,
      "guest_additions_mode": "disable",
      "hard_drive_interface": "sata",
      "hard_drive_nonrotational": true,
      "hard_drive_discard": true,
      "headless": false,
      "keep_registered": false,
      "ssh_username": "packer",
      "ssh_password": "packer",
      "ssh_wait_timeout": "35m",
      "ssh_host_port_min": 2222,
      "ssh_host_port_max": 2229,
      "ssh_skip_nat_mapping": false,
      "http_directory": "ks",
      "http_port_min": 10082,
      "http_port_max": 10089,
      "skip_export": false,
      "output_directory": "output-virtualbox-iso",
      "vboxmanage": [
      ],
      "vboxmanage_post": [
      ],
      "boot_wait": "10s",
      "boot_command": [
        "<up><wait><tab><wait> ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/anacondaks{{user `so_distribution`}}{{user `so_majorversion`}}{{user `so_imagetype`}}.cfg text<enter><wait>"
      ],
      "shutdown_command": "echo {{user `so_adminpass`}} | sudo -S -i -u {{user `so_adminuser`}} sudo -S shutdown -P now"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "./files/{{user `so_distribution`}}{{user `so_majorversion`}}/serverinfo.sh",
      "destination": "serverinfo.sh"
    },
    {
      "type": "file",
      "source": "./files/{{user `so_distribution`}}{{user `so_majorversion`}}/control-cloud-init.service",
      "destination": "control-cloud-init.service"
    },
    {
      "type": "file",
      "source": "./files/{{user `so_distribution`}}{{user `so_majorversion`}}/control-cloud-init.sh",
      "destination": "control-cloud-init.sh"
    },
    {
      "type": "file",
      "source": "./files/{{user `so_distribution`}}{{user `so_majorversion`}}/guest-vmtools.service",
      "destination": "guest-vmtools.service"
    },
    {
      "type": "file",
      "source": "./files/{{user `so_distribution`}}{{user `so_majorversion`}}/guest-vmtools.sh",
      "destination": "guest-vmtools.sh"
    },
    {
      "type": "file",
      "source": "./files/{{user `so_distribution`}}{{user `so_majorversion`}}/switch-to-GraphicalUserInterface.sh",
      "destination": "switch-to-GraphicalUserInterface.sh"
    },
    {
      "type": "file",
      "source": "./files/{{user `so_distribution`}}{{user `so_majorversion`}}/switch-to-TextUserInterface.sh",
      "destination": "switch-to-TextUserInterface.sh"
    },
    {
      "environment_vars": [
        "so_adminuser={{user `so_adminuser`}}",
        "so_adminpass={{user `so_adminpass`}}",
        "so_defaultclouduser={{user `so_defaultclouduser`}}"
      ],
      "execute_command": "echo 'packer' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "postscripts/post{{user `so_distribution`}}{{user `so_majorversion`}}{{user `so_imagetype`}}.sh"
      ],
      "type": "shell"
    }
  ]
}

